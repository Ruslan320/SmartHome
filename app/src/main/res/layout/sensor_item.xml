<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        card_view:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:background="@color/colorPrimary5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/colorPrimary5"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Розетка утюга"
                    android:layout_weight=""
                    android:textColor="@color/MyBlue"
                    android:gravity="center"
                    android:textSize="35sp"
                    android:padding="4dp"
                    android:shadowColor="@color/MyBlue"
                    android:shadowDy = "0"
                    android:shadowDx = "0"
                    android:shadowRadius="100"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:background="@null"
                    android:textSize="12sp"
                    android:text="Установить время переключения состояния"
                    android:textColor="@color/colorPrimaryLight"
                    />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:id="@+id/toggle_btn"
                style="@style/toggleButtonSocket"
                android:background="@drawable/ic_toggle_socket_bg"
                android:layout_gravity="center"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>