<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">


    <com.chauthai.swipereveallayout.SwipeRevealLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        app:dragEdge="right"
        app:mode="same_level"
        tools:ignore="MissingConstraints">
        <FrameLayout
            android:id="@+id/delete_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                >

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_delete_black_24dp"
                    android:tint="@color/colorPrimaryLight"
                    android:background="@color/fui_transparent"
                    android:id="@+id/btn_delete_kettle"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/tv_delete"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="@string/delete"
                    android:textColor="@color/colorPrimaryLight"
                    />
            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                card_view:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                card_view:cardBackgroundColor="@color/colorPrimary4"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="TODO"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_bg_fin" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/colorPrimary5"
                    >
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/sensor_name"
                            android:text="Розетка утюга"
                            android:textColor="@color/colorPrimaryLight"
                            android:layout_gravity="center"
                            android:textSize="35sp"
                            android:padding="4dp"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_add_circle_black_24dp"
                            android:layout_below="@+id/sensor_name"/>
                    </RelativeLayout>


                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <ToggleButton
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        android:id="@+id/toggle_btn"
                        style="@style/toggleButtonKattler"
                        android:background="@drawable/ic_toggle_ketller_bg"
                        android:layout_gravity="center"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </FrameLayout>
    </com.chauthai.swipereveallayout.SwipeRevealLayout>


</android.support.constraint.ConstraintLayout>